@import '../../../node_modules/nib'

.listView
  margin 0
  padding 0

.listView .margin-0
  margin 0

.listView .padding-0
  padding 0

.listView .md-tile-content h3
  font-size 1.17em

.listView .md-tile-content p
  margin-top 5px

.listView .prevent-select
  user-select none

.listView .list-view-search-wrapper input
  border-radius 1.5rem

.listView .list-view-sort-wrapper md-select
  margin 0

.listView .list-view-sort-wrapper md-select-label
  min-width 150px
  padding-left 10px
  vertical-align middle
  border 1px solid #ccc !important
  background-color #fff
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.075) inset
  color #555
  display block
  height 34px
  border-radius 5px

.listView .list-view-sort-wrapper i
  font-size 1.5rem
  color rgb(121, 85, 72);
  padding-left 5px
  line-height 34px
  vertical-align middle
  cursor pointer

.listView md-item
  cursor pointer

.listView md-item .selected
  background-color rgb(239, 235, 233)

.listView .pagination a
  user-select none
  outline none !important
